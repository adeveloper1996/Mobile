<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_10"
    android:id="@+id/sms_chat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_anketa_seller_persons"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_image"
                android:src="@drawable/ic_person_white_24dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/name_personal_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Кенес Нурсултан"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/anketa_personal_area_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Iphone 5S"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/sms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="Сделайте скидку на телефон Iphone 5S"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/sms_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11.09.17"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="320dp"
                android:textColor="@color/black"/>


</RelativeLayout>