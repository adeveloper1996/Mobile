<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="230dp"
    card_view:cardBackgroundColor="@color/gray"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardMaxElevation="2dp"
    card_view:cardElevation="1dp"
    android:id="@+id/rv_grid_item"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="230dp">

        <ImageView
            android:id="@+id/img_grid_view_advert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="230dp"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/iBtn_add_favorite" />

        <ImageButton
            android:id="@+id/iBtn_add_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_star_outline"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@color/blue_dead2"
            android:paddingTop="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_5">

                <TextView
                    android:text="150 000 тг"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_price_grid_view_advert"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:paddingLeft="@dimen/dp_10"
                    android:layout_weight="1"/>

                <TextView
                    android:text="03.09.2017"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_date_grid_view_advert"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingRight="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apple 5s"
                android:id="@+id/txt_name_grid_view_advert"
                android:layout_marginBottom="2dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>