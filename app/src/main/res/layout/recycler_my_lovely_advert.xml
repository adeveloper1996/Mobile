<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lladvertsingle"
        android:layout_marginTop="2dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/img_advert_single"
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:src="@drawable/loadimg"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_star_outline"
                android:id="@+id/imageButtonFavorite"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/img_advert_single"
                android:layout_alignEnd="@+id/img_advert_single"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_5">

            <TextView
                android:id="@+id/txt_name_advert_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Sumsung Galaxy S7"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/txt_price_advert_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_87"
                android:textSize="20sp"
                android:text="150 000тг"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_date_advert_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background"
                android:textSize="15sp"
                android:layout_gravity="bottom"
                android:text="24.10.2016"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
