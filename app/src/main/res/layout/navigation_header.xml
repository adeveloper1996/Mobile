<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/colorPrimaryDark"
    android:layout_marginTop="25dp">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/llnav"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/img_navigation_avatar"
            android:background="@drawable/rounded_img"
            android:src="@drawable/ic_person_white_24dp"
            android:gravity="start"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iBtn_navigation_edit"
        android:background="@drawable/ic_create_white_24dp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignTop="@+id/llnav1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:id="@+id/llnav1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/llnav"
        android:layout_toRightOf="@+id/llnav"
        android:layout_toEndOf="@+id/llnav"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_navigation_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nurs"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID:"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txt_navigation_view_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="96"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_navigation_view_user_type"
        android:text="Покупатель"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_below="@id/llnav"
        android:layout_alignRight="@id/iBtn_navigation_edit"
        android:layout_alignEnd="@id/iBtn_navigation_edit"/>

</RelativeLayout>