<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_edit_personal_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="@dimen/dp_30"
    android:paddingRight="@dimen/dp_30"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_edit_personal"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_personal_name"
            android:textColor="@color/colorAccent"
            android:hint="Имя"
            android:drawableLeft="@drawable/ic_account_circle_white_24dp"
            android:textColorHint="@color/gray"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_personal_email"
            android:textColor="@color/colorAccent"
            android:hint="E-mail"
            android:drawableLeft="@drawable/ic_drafts_white_24dp"
            android:textColorHint="@color/gray"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_personal_dop_phone"
            android:textColor="@color/colorAccent"
            android:hint="Доп.телефон"
            android:drawableLeft="@drawable/ic_phone_white_24dp"
            android:textColorHint="@color/gray"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_personal_city"
            android:textColor="@color/colorAccent"
            android:drawableLeft="@drawable/ic_equalizer_white_24dp"
            android:hint="Город"
            android:textColorHint="@color/gray"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_personal_address"
            android:textColor="@color/colorAccent"
            android:drawableLeft="@drawable/ic_room_white_24dp"
            android:hint="Адрес"
            android:textColorHint="@color/gray"/>

        <EditText
            android:id="@+id/edit_personal_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:hint="Пароль"
            android:drawableLeft="@drawable/ic_lock_open_white_24dp"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textPassword"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="54dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn_edit_personal_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:textColor="@color/colorAccent"
            android:text="Сохранить"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_10"/>

        <Button
            android:id="@+id/btn_edit_personal_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:textColor="@color/colorAccent"
            android:text="Отменить"
            android:layout_weight="1"/>

    </LinearLayout>
</RelativeLayout>
